<UserControl
    x:Class="UwCore.Controls.Header"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    
    Height="48"
    >

    <Grid>
        <StackPanel Grid.Row="0"
                    Background="{ThemeResource SystemListAccentMediumColor}"
                    Orientation="Horizontal">
            <Button x:Name="NavigationButton"
                    Visibility="{x:Bind NavigationButtonVisibility, Mode=OneWay}"
                    Click="NavigationButtonOnClick" 
                    Content="&#xE700;" 
                    FontSize="20"
                    Width="48"
                    Height="48"
                    Background="{ThemeResource SystemListAccentLowColor}"
                    FontFamily="{ThemeResource SymbolThemeFontFamily}"/>
            <TextBlock VerticalAlignment="Center"
                       Margin="20, 0, 0, 0"
                       Text="{x:Bind Title, Mode=OneWay}"
                       Style="{StaticResource TitleTextBlockStyle}" />
        </StackPanel>
    </Grid>
</UserControl>